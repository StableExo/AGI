# ==================================
# Blockchain & Provider Configuration
# ==================================
# The URL for the Ethereum JSON-RPC provider (e.g., from Infura or Alchemy)
RPC_URL=

# The private key for the wallet used to sign and send transactions.
# IMPORTANT: This is a sensitive value. Do not commit it to version control.
EXECUTION_PRIVATE_KEY=

# The authentication key for the Flashbots service, used for private transactions.
FLASHBOTS_AUTH_KEY=

# The address of the deployed FlashSwap smart contract.
FLASH_SWAP_CONTRACT_ADDRESS=

# The address of the treasury wallet where profits are collected.
TREASURY_WALLET_ADDRESS=

# The URL for the Ethereum Mainnet JSON-RPC provider, used for treasury operations.
ETH_MAINNET_RPC_URL=


# ==================================
# CEX API Credentials
# ==================================
# IMPORTANT: Fill these in your local .env file. Do not commit the secrets.

# BTCC
BTCC_API_KEY=
BTCC_API_SECRET=
BTCC_API_URL=https://spotapi.btcc.com

# Coinbase
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Kraken
KRAKEN_API_KEY=
KRAKEN_API_SECRET=


# ==================================
# System & Alerting Configuration
# ==================================
# The token for the Telegram bot used for alerts.
TELEGRAM_BOT_TOKEN=

# The chat ID to which the bot will send messages.
TELEGRAM_CHAT_ID=

# Execution Mode: Can be 'DRY_RUN' or 'LIVE'.
# DRY_RUN will log intended trades without executing them.
# LIVE will execute real trades. Defaults to DRY_RUN if not set.
EXECUTION_MODE=DRY_RUN

# The interval in milliseconds at which the bot will run its analysis cycle.
LOOP_INTERVAL_MS=10000

# The logging level for the application. Can be 'info', 'debug', 'warn', 'error'.
LOG_LEVEL=info